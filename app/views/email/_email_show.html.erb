<div class="container pt-4">
  <div class="card-deck text-center">
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h1 class="my-0 font-weight-bold large"><%= email.object%></h1>
      </div>
      <div class="card-body text-left">
        <p>Son contenu : <%= email.body%></p>
        <div class="d-flex">
          <%= link_to "Supprimer", email_path(email.id), method: :delete, class: "btn btn-danger", remote: true  %>
          <% if email.read%>
            <%= link_to "Marquer comme Non lu", email_path(email.id), method: :put, class: "btn btn-info" %>
          <% else %>
            <%= link_to "Marquer comme lu", email_path(email.id), method: :put, class: "btn btn-info" %>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>